@model Task<IEnumerable<ResultDealsOfTheWeekDto>>
<section class="related-product-area section_gap_bottom">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-lg-6 text-center">
				<div class="section-title">
					<h1>Haftanın Fırsat Ürünleri</h1>
					<p>
						İndirimlerden Faydalanın
					</p>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<div class="row">
					@foreach (var item in await Model)
					{
						<div class="col-lg-4 col-md-4 col-sm-6 mb-20">
							<div class="single-related-product d-flex">
								<a href="#"><img src="~/master/img/product/@item.ImageUrl" alt=""></a>
								<div class="desc">
									<a href="#" class="title">@item.Title</a>
									<div class="price">
										<h6>@item.TotalPrice</h6>
										<h6 class="l-through">@item.NotDiscountPrice</h6>
									</div>
								</div>
							</div>
						</div>
					}
				
				</div>
			</div>
			
		</div>
	</div>
</section>
