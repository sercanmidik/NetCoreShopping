@model Task<IEnumerable<ResultBannerProductDto>>
@{
    int count = 0;
}

<section class="banner-area">
    <div class="container">
        <div class="row fullscreen align-items-center justify-content-start">
            <div class="col-lg-12">
                <div class="active-banner-slider owl-carousel">
                    @foreach (var item in await Model)
                    {
                        count++;
                        if (count == 1)
                        {
                            <div class="row single-slide align-items-center d-flex">
                                <div class="col-lg-5 col-md-6">
                                    <div class="banner-content">
                                        <h1>@item.BannerTitleOne <br>@item.BannerTitleTwo</h1>
                                        <p>
                                            @item.BannerContent
                                        </p>
                                        <div class="add-bag d-flex align-items-center">
                                            <a class="add-btn" href="@Url.Action("OrderDetailAdd", "OrderDetail", new { productId = item.ProductId })"><span class="lnr lnr-cross"></span></a>
                                            <span class="add-text text-uppercase">Sepete Ekle</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-7">
                                    <div class="banner-img">
                                        <img class="img-fluid" src="~/master/img/banner/@item.BannerImageUrl" alt="">
                                    </div>
                                </div>
                            </div>
                        }
                        
                        else
                        {
                            <div class="row single-slide">
                                <div class="col-lg-5 col-md-6">
                                    <div class="banner-content">
                                        <h1>@item.BannerTitleOne <br>@item.BannerTitleTwo</h1>
                                        <p>
                                            @item.BannerContent
                                        </p>
                                        <div class="add-bag d-flex align-items-center">
                                            <a class="add-btn" href="@Url.Action("OrderDetailAdd", "OrderDetail", new { productId = item.ProductId })"><span class="lnr lnr-cross"></span></a>
                                            <span class="add-text text-uppercase">Sepete Ekle</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-7">
                                    <div class="banner-img">
                                        <img class="img-fluid" src="~/master/img/banner/@item.BannerImageUrl" alt="">
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>

               

            </div>
        </div>
    </div>
</section>
