@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@model IPagedList<ResultProductListDto>



<div class="align-items-center">
	@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>

	<div class="row">
		<!-- single product -->
		@foreach (var item in Model)
		{
			<div class="col-lg-4 col-md-6">
				<div class="single-product">
				<a href="@Url.Action("Detail", "Product", new { productId = item.ProductId })"><img class="img-fluid" src="~/master/img/product/@item.ImageUrl" alt=""></a>
					<div class="product-details">
						<h6>
							@item.BrandName @item.Title
						</h6>
						<div class="price">
							<h6>@item.TotalPrice</h6>
							<h6 class="l-through">@item.NotDiscountPrice</h6>
						</div>
						<div class="prd-bottom">

						<a href="@Url.Action("OrderDetailAdd", "OrderDetail", new { productId = item.ProductId })" class="social-info">
								<span class="ti-bag"></span>
								<p class="hover-text">Ekle</p>
							</a>
							<a href="" class="social-info">
								<span class="lnr lnr-heart"></span>
								<p class="hover-text">Favorilere Ekle</p>
							</a>
						
						</div>
					</div>
				</div>
			</div>
		}
		
	</div>

		
	


